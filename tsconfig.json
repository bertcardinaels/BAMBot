
{
    "compilerOptions": {
      "lib": ["dom", "es2018"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2020",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "declaration": true,
      "typeRoots": ["node_modules/@types"],
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }